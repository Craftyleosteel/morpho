// Testing whether exporting a mesh to a ".vtk" file and importing it
// back works
import vtk 
import meshtools

var m1 = LineMesh(fn (t) [t,0,0], -1..1:2)

var filename = "data.vtk"

var vtkE = VTKExporter(m1)

vtkE.export(filename)

var vtkI = VTKImporter(filename)

var m2 = vtkI.getmesh()

print m2
// Expect: <Mesh: 2 vertices>
